{
  "compilerOptions": {
    "target": "ES2020",
    "sourceMap": true,
    "module": "commonjs",
    "declaration": true,
    "outDir": "./build",
    "lib": ["es2018", "es2019"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": false,
    "rootDir": "./src"
  },
  "exclude": ["build", "dist", "node_modules", "lib", "test", "**/*.unit.ts", "test-files"]
}
